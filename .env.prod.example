# ===========================================
# .env.prod.example - Plantilla para producción AWS
# ===========================================
# Copia este archivo a .env.prod y completa los valores

# Django Configuration
DJANGO_SETTINGS_MODULE=api_backend.settings
SECRET_KEY=genera-una-clave-secreta-segura-aqui
DEBUG=0
ALLOWED_HOSTS=tu-dominio.com,tu-ip-publica,localhost

# =====================
# MySQL RDS Configuration
# =====================
# Endpoint de tu instancia RDS (ej: mydb.abc123.us-east-1.rds.amazonaws.com)
MYSQL_HOST=tu-endpoint-rds.region.rds.amazonaws.com
MYSQL_PORT=3306
MYSQL_DATABASE=api_db
MYSQL_USER=admin
MYSQL_PASSWORD=tu-password-seguro-rds
# MYSQL_ROOT_PASSWORD no es necesario para RDS

# =====================
# Redis/Celery (Opcional para producción inicial)
# =====================
# Opción 1: Redis local en EC2
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
# Opción 2: ElastiCache (más adelante)
# CELERY_BROKER_URL=redis://tu-elasticache-endpoint:6379/0

# Superusuario
DJANGO_SU_EMAIL=admin@tudominio.com
DJANGO_SU_PASSWORD=password-seguro-admin

# =====================
# IA Configuration
# =====================
AI_PROVIDER=openai
OPENAI_API_KEY=tu-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_EST_COMPLETION_TOKENS=1200
OPENAI_MIN_INTERVAL_SECONDS=0
OPENAI_RETRY_AFTER_CAP=240
OPENAI_WAIT_ON_429=0

# Ollama (solo si usas servidor Ollama externo)
# AI_PROVIDER=ollama
# OLLAMA_BASE_URL=http://tu-servidor-ollama:11434
# OLLAMA_MODEL=llama3.1:8b
LLM_TEMPERATURE=0
LLM_TIMEOUT_SECONDS=240

# =====================
# Subject Defaults
# =====================
DEFAULT_SUBJECT_SECTION=1
DEFAULT_SUBJECT_CAMPUS=Chillán
DEFAULT_SUBJECT_API_TYPE=2
DEFAULT_SUBJECT_HOURS=0
DEFAULT_SEMESTER_LEVEL_NAME=Primero
DEFAULT_AREA_IF_UNSURE=Administracion
SUBJECT_DEFAULT_PERIOD=P-2025
SUBJECT_CODE_UPPERCASE=true
SUBJECT_NAME_TITLECASE=true

# =====================
# Otros
# =====================
AI_SCHEMA_VERSION=v1
DESCRIPTORS_DELETE_ON_SKIP=false
